<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.example.mobilesoftware.view.viewmodels.TripViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text='@{viewModel.title}'/>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".view.view.TripActivity">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentPadding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:id="@+id/weather_icon"
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"/>
                            <LinearLayout
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text="@{viewModel.weather}"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text="@{viewModel.temp}"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Start Time:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/startTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text='@{viewModel.startTime}'
                                    android:gravity="left"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Now:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/currentTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text='@{viewModel.currentTime}'
                                    android:gravity="left"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Duration:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/duration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text='@{viewModel.duration}'
                                    android:gravity="left"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Temperature:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/temperature"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text='@{viewModel.temperature+ `(â„ƒ)`}'
                                    android:gravity="left"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Pressure:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/pressure"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:text="@{viewModel.pressure + `(hpa)`}"
                                    android:gravity="left"/>
                            </LinearLayout>

                            <androidx.fragment.app.FragmentContainerView
                                android:id="@+id/map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_marginVertical="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="300dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <Button
                                android:id="@+id/take_pic"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:text="Take Picture" />
                            <Button
                                android:id="@+id/upload_pic"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:text="Upload Picture" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/stop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Stop"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</layout>