<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.example.mobilesoftware.view.viewmodels.TripViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text=" "/>
                <!--android:text='@{viewModel.title}'-->
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".view.view.ShowImageActivity">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentPadding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="5"
                            android:layout_marginBottom="5dp">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="360dp"
                                android:layout_height="470dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="15dp"/>
                            <EditText
                            android:id="@+id/editText_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:ems="10"
                            android:minHeight="48dp"
                            android:text="Title"
                            app:layout_constraintBottom_toTopOf="@id/editText_description"
                            tools:layout_editor_absoluteX="16dp" />

                            <EditText
                                android:id="@+id/editText_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:ems="10"
                                android:minHeight="48dp"
                                android:text="Description"

                                tools:layout_editor_absoluteX="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Trip Title:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/tripTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="the title"
                                    android:gravity="left"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Temperature:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/temperature"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="add temp"
                                    android:gravity="left"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Pressure:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/pressure"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="pressure at"
                                    android:gravity="left"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Date Taken:"
                                    android:layout_weight="3"
                                    android:gravity="left"/>
                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_weight="3"
                                    android:layout_marginBottom="7dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="add date @"
                                    android:gravity="left"/>
                            </LinearLayout>
                            <androidx.fragment.app.FragmentContainerView
                                android:id="@+id/fl_map"
                                android:layout_width="375dp"
                                android:layout_height="400dp"
                                android:paddingRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:name="com.google.android.gms.maps.SupportMapFragment"

                                app:layout_constraintHorizontal_bias="1.0"
                                />

                        </LinearLayout>
                        <Button
                            android:id="@+id/button_save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save Changes"
                            android:layout_gravity="right" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</layout>